<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <hr>
      <h1 class="page-header"> Create New Note
      </h1>
    </div>
  </div>

    <% flash.each do |key, value| %>
    <%= content_tag :div, value, class: key + "alert alert-danger" %>
    <% end %>

  <div>
    <%= form_for @note do |f| %>
    <h4>Title</h4>
    <label for="note_title">
    <%= f.text_field :title, :class => "form-control", :placeholder => "Title"%>
    </label>
    <hr>
    <div class="dropdown">
      <h4>Please choose Notepad</h4>
      <%= f.collection_select :notepad_id, Notepad.all, :id, :title, {}, {:class => "btn btn-primary dropdown-toggle btn-block"} %>
    </div>

    <hr>
    <%= f.text_area :text, :class => 'ckeditor', as: :ckeditor, id: "ckeditor_text_area" %>
    <hr>
    <label class="btn btn-primary btn-block">
      Add files!
      <span style="display:none;">
        <%= f.file_field :pictures, multiple: true, accept: "image/jpeg, image/jpg, image/gif, image/png"%>
      </span>
    </label>
    <hr>
    <%= f.submit "Create", :class => 'btn btn-primary btn-block' %>
    <% end %>
    <%= link_to "Close", notes_path(@note), :class => 'btn btn-warning btn-block' %>
  </div>


</div>
<script>
CKEDITOR.replace('ckeditor_text_area')
</script>
